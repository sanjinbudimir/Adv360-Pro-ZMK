/ {
    behaviors {
      #include "macros.dtsi"

      bhm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          tapping-term-ms = <170>;
          flavor = "tap-preferred";
          bindings = <&kp>, <&kp>;
      };

      shm: shift_hr_mod {
          compatible = "zmk,behavior-hold-tap";
          label = "SHIFT_HOMEROW_MODS";
          #binding-cells = <2>;
          tapping-term-ms = <120>;
          flavor = "tap-preferred";
          bindings = <&kp>, <&kp>;
      };
    };

  keymap {
    compatible = "zmk,keymap";
    default_layer {
      bindings = <
        &none   &kp N1 &kp N2      &kp N3      &kp N4       &kp N5 &tog 1                                                        &mo 3  &kp N6 &kp N7       &kp N8      &kp N9      &kp N0   &none
